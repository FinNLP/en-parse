{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "./dist/",
		"target":"ES6",
		"declaration":true,
		"strictNullChecks":true,
		"alwaysStrict":true,
		"forceConsistentCasingInFileNames":true
	},
	"files": [
		"./lib/index.ts"
	],
	"exclude": [
		"./node_modules/*"
	]
}